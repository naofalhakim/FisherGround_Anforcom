<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/img_ikan"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ikan1"
            />

        <LinearLayout
            android:id="@+id/layout_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_ikan"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/txt_nama_ikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikan Cakalang"
                style="@style/MyTextColorLisrTitle"
                />

            <TextView
                android:id="@+id/txt_harga_ikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 45.0000 / Kg"
                style="@style/MyTextColorLisrTitle"
                />

            <TextView
                android:id="@+id/txt_harganaik_ikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MyTextColorLisrSubTitle"
                />

        </LinearLayout>
        
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/img_sign_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>