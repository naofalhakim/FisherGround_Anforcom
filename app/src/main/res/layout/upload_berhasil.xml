<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:elevation="3dp"
    android:paddingBottom="20dp"
    >

    <RelativeLayout
        android:id="@+id/imageMix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/centang"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageMix"
        android:id="@+id/titleMasakan"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Ikan Dijual Berhasil"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/btnGreyText"
        />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titleMasakan"
        android:id="@+id/contentMasakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terimakasih sudah menambahkan hasil tangkapan anda, Semoga Sukses."
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/textMain"
        />

    <Button
        android:layout_below="@+id/contentMasakan"
        android:id="@+id/btnOk"
        android:layout_width="200dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_accentsquare"
        android:layout_marginTop="18dp"
        />


</RelativeLayout>