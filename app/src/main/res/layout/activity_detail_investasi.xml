<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeUser.DetailJual">
    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageDetailInvestasi"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ikakap" />
        <LinearLayout
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_below="@+id/imageDetailInvestasi"
            android:gravity="center">

        <LinearLayout
            android:id="@+id/harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtDetailNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peremajaan Kapal"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryText"/>
                <TextView
                    android:id="@+id/detailFoodJarak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran kapal yang akan dilakukan peremajaan yaitu 10GT"
                    android:textSize="12dp"
                    android:textColor="@color/btnGreyText"/>
                <RelativeLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtroi"
                        android:text="Hubungi "
                        android:textSize="12dp"
                        android:textColor="@color/btnGreyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/stock"
                        android:layout_toRightOf="@+id/txtroi"
                        android:text=" Pak Irwan "
                        android:textSize="13dp"
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/primaryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_toRightOf="@+id/stock"
                        android:text=" (0865472836)"
                        android:textSize="12dp"
                        android:textColor="@color/btnGreyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/btnGreyText"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/detailHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3000000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginRight="4dp"/>
            </LinearLayout>

        </LinearLayout>

            <View
                android:id="@+id/garis"
                android:layout_below="@+id/txtJudul"
                android:layout_width="370dp"
                android:layout_height="1.3dp"
                android:background="@color/btnGreyText"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/detailInvestasi"
                android:padding="10dp"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ukuran kapal yang akan dilakukan peremajaan yaitu 10GT yang diproyeksikan akan selesai dalam kurun waktu 1 bulan. Kapal akan mulai beroperasi satu minggu setelah proses peremajaan selesai. Dana investasi akan kembali sekitar 1 bulan setelah itu atau kurang lebih 4 kali melaut. Sehingga total waktu yang diperlukan sekitar 3 bulan."
                android:textSize="14dp"
                android:textColor="@color/btnGreyText"
                android:layout_gravity="center_vertical|end"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:id="@+id/btnInvest"
                android:textSize="16dp"
                android:text="Investasi sekarang"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/btnorange"
                android:layout_toRightOf="@id/btnMessage"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>