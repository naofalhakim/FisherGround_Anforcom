<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/img_orang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mask"
            />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naofal"
            android:layout_toRightOf="@id/img_orang"
            style="@style/MyTextColorLisrTitle"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textMain"
            />

            <TextView
                android:id="@+id/txt_jenis_ikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikan Kakap 10 Kg"
                android:textColor="@color/textMain"
                style="@style/MyTextColorLisrTitle"
                android:layout_toRightOf="@id/img_orang"
                android:layout_below="@id/txt_nama"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:textSize="16sp"
                android:textColor="@color/accentText"
                style="@style/MyTextColorLisrSubTitle"
                android:layout_alignParentRight="true"
                />

    </RelativeLayout>

</android.support.v7.widget.CardView>