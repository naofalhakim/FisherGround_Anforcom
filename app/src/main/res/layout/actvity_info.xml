<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/colorPrimary"
    app:cardCornerRadius="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_height="280dp">

        <LinearLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Terkini"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_light"
                android:text="Rp 1.000.000"
                android:textColor="@color/white"
                android:textSize="52sp" />

            <TextView
                android:id="@+id/txt_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(28/08/2018  12:59:00 PM)"
                android:textColor="@color/btnGreyText"
                />

            <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <Button
                    android:id="@+id/btn_poin"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/btnaccent"
                    android:text="100 Points"
                    android:textSize="12sp"
                    />

                <Button
                    android:id="@+id/btn_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:background="@drawable/btnaccent"
                    android:text="Lihat Transaksi"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>